extends ./layout.jade
block content
        .color-container
            .container
                h1 WhatsApp Tools
                p= __("A tool to parse WhatsApp hashes, to generate new or use existing WhatsApp and register a  or existing range of WhatsApp numbers")
        .container
            .row
                .col-sm-12
                    h1.page-header#modules= __("Modules")
                    .row
                        .col-sm-12
                            h2= __("Parser")
                            .col-sm-6
                                img.img-responsive(src='/img/scr1.jpg')
                            .col-sm-6
                                p= __("Import phone numbers from a .txt file or generate them and check wether they were already registered with empty or specified password")
                                h3= __("Features")
                                ul
                                    li= __("Ultra-fast multi-threaded parallel parsing")
                                    li= __("Ability to parse numbers registered with a password")
                                    li= __("Multiple API versions implemented. You can use the newest, oldest one or both of them")
                                    li= __("Ability to set a pause in order to avoid WhatsApp filtration")
                                    li= __("Export parsed numbers to CSV or TXT files, including parsed hashes")
                    .row
                        .col-sm-12
                            h2= __("Registration")
                            .col-sm-6
                                img.img-responsive(src='/img/scr2.jpg')
                            .col-sm-6
                                p= __("Send verification SMS messages to all of the imported phone numbers and check recieved verification codes to get the hashes")
                                h3= __("Features")
                                ul
                                    li= __("Batch verfification SMS sent")
                                    li= __("Batch verification codes submit")
                                    li= __("Ability to set a pause in order to avoid WhatsApp filtration")
                                    li= __("Ability to register numbers with a password")
                                    li= __("Instantly get hashes for numbers which verification codes were already submitted")
                    .row
                        .col-sm-12
                            h2= __("Generator")
                            .col-sm-6
                                img.img-responsive(src='/img/scr3.jpg')
                            .col-sm-6
                                p= __("Generate range of phone numbers and send them to parser module or to text file")
                                h3= __("Features")
                                ul
                                    li= __("Shuffle numbers to deflect WhatsApp attention away from you")
                                    li= __("Instantly send generated numbers to parser module")
                                    li= __("Save generated numbers to text file")
            .row
                .col-sm-12
                    h1.page-header#bd= __("Buy & Download")

                    .col-sm-6.text-center
                        p= __("Buy the license key and get access to full list of features")
                            p
                                a(href='#contact')= __("Contact me")
                                span= __(" to buy the license key")
                                h3.text-center 250 USD / 230 EUR / 12 500 RUB
                        a.btn.btn-lg.btn-success(href='mailto:andzhilin@gmail.com')
                            span.glyphicon.glyphicon-fire
                            span= __(" Buy full version")
                    .col-sm-6.text-center
                        p(style='margin-bottom: 30px;')= __("You can also download")
                            strong= __(" free")
                            span= __("test version of the program, which can handle up to 10 phone numbers at time")
                        a.btn.btn-info(href='/WhatsAppTools.zip',style='top: 45px;position: relative;')
                            span.glyphicon.glyphicon-save
                            span= __(" Download free version")
            .row(style='margin-bottom: 100px;')
                .col-sm-12
                    h1.page-header#contact= __("Contact")
                    p= __("Feel free to conact me and ask any question about the WhatsApp Tools")
                    p= __("I can show you all the benefits of the")
                        strong  WhatsApp Tools
                        span= __(" by sharing my screen with you via")
                        strong  TeamViewer
                        span= __(" or")
                        strong  Skype
                        | .
                    ul.list-group.contacts-list
                        li.list-group-item
                            i.fa.fa-skype.fa-2x
                            strong  slashman500
                        li.list-group-item
                            i.fa.fa-envelope-square.fa-2x
                            a(href='mailto:andzhilin@gmail.com')
                                strong  andzhilin@gmail.com

